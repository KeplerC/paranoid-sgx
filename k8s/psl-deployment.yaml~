apiVersion: apps/v1
kind: Deployment
metadata:
  name: psl-deployment
  labels:
    app: psl
spec:
  replicas: 2
  selector:
    matchLabels:
      app: psl
  template:    
    metadata:
      labels:
        app: psl
    spec:    
      containers:
      - name: server
        image: keplerc/paranoid-asylo:standalone
        args:
        - "./scripts/run-server.sh"
        imagePullPolicy: IfNotPresent
      - name: coordinator
        image: keplerc/paranoid-asylo:standalone
        args:
        - "./scripts/run-coordinator.sh"
        imagePullPolicy: IfNotPresent
        ports:
        - containerPort: 3005
      - name: worker
        image: keplerc/paranoid-asylo:standalone
        args:
        - "./scripts/run-worker.sh"
        imagePullPolicy: IfNotPresent
---
kind: Service
apiVersion: v1
metadata:
  name: psl-load-balancer
spec:
  selector:
    app: psl
  ports:
  - protocol: TCP
    # Port accessible inside cluster
    port: 3005
    # Port to forward to inside the pod
    targetPort: 3005
    # Port accessible outside cluster
    nodePort: 30050
  type: LoadBalancer
  externalIPs:
  - 128.32.37.26
  - 128.32.37.46
  - 128.32.37.82
  